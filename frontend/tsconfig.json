{
  "compilerOptions": {
    "outDir": "./build/",
    "noImplicitAny": false,
    "module": "ESNext",
    "target": "ES2020",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strict": false,
    "types": ["node"]
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true
    }
  },
  "include": [
    "src/**/*",
    "config/**/*",
    "types/**/*"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}